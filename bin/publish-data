#!/usr/bin/env python

from subprocess import call
import os

UPSTREAM = 'origin'
REPO = 'git@github.com:pm5/taiwan-aed'
PUBLISH_DIR = 'publish'

def main():
    """
    Publish new data.
    """
    if os.access(PUBLISH_DIR, os.R_OK):
        os.chdir(PUBLISH_DIR)
        call(['git', 'pull']);
        os.chdir('..')
    else:
        r = call(['git', 'clone', REPO, '-b', 'data', PUBLISH_DIR])
        if r == 128:
            call(['git', 'clone', REPO, PUBLISH_DIR])
            os.chdir(PUBLISH_DIR)
            call(['git', 'checkout', '--orphan', 'data'])
            call(['git', 'rm', '-rf', '.'])
            os.chdir('..')

    call(['rsync', '-a', '--include=*.json', '--exclude=.*', 'data/', PUBLISH_DIR])

    os.chdir(PUBLISH_DIR)
    call(['git', 'add', '-A', '.'])
    call(['git', 'commit', '-m', 'Published'])
    # call(['git', 'push', '-u', 'origin', 'data'])

if __name__ == "__main__":
    main()
